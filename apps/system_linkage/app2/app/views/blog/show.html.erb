<div class="row">
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <%= image_tag @post.thumbnail.medium.url, class: 'img-responsive' %>
          <div class="panel-body">
            <h3>
              <%= @post.title %>
              <br />
              <small>Published on: <%= @post.created_at.to_date.to_s %></small>
              </h3>
            <hr />
            <%= raw @post.body %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-2">
    <h4 class="h4">Categories</h4>
    <ul class="list-unstyled">
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, root_path(category_slug_eq: category.slug) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
