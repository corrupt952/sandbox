<div class="row">
  <div class="col-sm-12">
    <div class="text-right">
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Body</th>
          <th>Category</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= truncate(strip_tags(post.body), length: 30) %></td>
            <td><%= post.category_name %></td>
            <td>
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default btn-sm' %>
              <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
  </div>
</div>
